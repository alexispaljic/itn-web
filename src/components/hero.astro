---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/procedural-city.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      class="rounded-md"
      alt="Procedural City"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Institut des<wbr /> Transformations<wbr /> Numériques
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Développez avec Mines Paris les projets innovants de la nouvelle vague des
      transformations numériques.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="actualites"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="news" />
        Actualités
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="contact"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="mail" />
        Contact
      </Link>
    </div>
  </div>
</main>
